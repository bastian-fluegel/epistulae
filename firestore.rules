rules_version = '2';
// Spark Plan: Nur Lese-/Schreibzugriff auf die eigene Nutzerdaten.
// In Python würde man Ähnliches serverseitig prüfen; hier regelt Firestore den Zugriff.

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
